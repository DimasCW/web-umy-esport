<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tournaments</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow-x: hidden;
        }
        .banner {
            position: relative;
            width: 100%;
            height: 100vh;
            background: url('https://via.placeholder.com/1200x500') no-repeat center center;
            background-size: cover;
        }
        .banner-text {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            text-align: center;
        }
        .banner-text h1 {
            font-size: 4rem;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
        }
        .banner-text p {
            font-size: 1.5rem;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/home">Home</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin">admin</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Fullscreen Banner Section -->
    <div class="banner">
        <div class="banner-text">
            <h1>Welcome to the Tournaments</h1>
            <p>Discover exciting tournaments and join the fun!</p>
        </div>
    </div>

    <!-- Tournament List Section -->
    <div class="container mt-5">
        <div class="row g-4">
            <!-- Loop through tournaments and display each one in a card -->
            <% tournaments.forEach(tournament => { %>
                <div class="col-md-4">
                    <!-- Wrap the card in an anchor tag to make it clickable -->
                    <a href="/tournament/<%= tournament.id %>" class="text-decoration-none">
                        <div class="card">
                            <img src="https://via.placeholder.com/250x150" class="card-img-top" alt="<%= tournament.name %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= tournament.name %></h5>
                                <p class="card-text"><%= tournament.description %></p>
                                <p class="card-text"><strong>Date:</strong> <%= tournament.date %></p>
                                <p class="card-text"><strong>Location:</strong> <%= tournament.location %></p>
                            </div>
                        </div>
                    </a>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
