                    </li>
                </ul>
            </div>
    
            <!-- Admin button on the right -->
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/login"  >Admin</a>
                </li>
            </ul>

            <!-- Dark Mode Toggle Button -->
            <button id="theme-toggle" class="btn btn-light ms-3">
                <i class="fas fa-moon"></i> 
            </button>
        </div>
    </nav>

    <!-- Fullscreen Banner Section -->
    <div id="home" class="banner"></div>

    <!-- Tournament List Section -->
    <div id="turnamen" class="container mt-5">
        <!-- Info Turnamen Header -->
        <div  class="text-center mb-5">
            <h2>Info Turnamen</h2>
            <div class="gariss" style="width: 150px; height: 3px;  margin: 0 auto;"></div>
        </div>

        <div class="row g-4">
            <!-- Loop through tournaments and display each one in a card -->
            <% tournaments.forEach(tournament => { %>
                <div class="col-md-4">
                    <div class="card glass-card shadow-lg border-0 rounded-3 overflow-hidden" style="transition: transform 0.3s ease;">
                        <div class="card-body">
                            <img src="<%= tournament.image_url %>" class="img-fluid mb-3" alt="<%= tournament.name %>">
                            <h5 class="huruf card-title  mb-3" style="font-size: 1.25rem; font-weight: bold;"><%= tournament.name %></h5>
                            <p class="huruf-abu " style="font-size: 0.9rem;"><%= tournament.description %></p>
                            <p class="huruf " style="font-size: 0.9rem;">
                                <strong>Date:</strong> <%= new Date(tournament.date).toLocaleDateString('en-GB', { day: 'numeric', month: 'long', year: 'numeric' }) %>
                            </p>
                            <p class="huruf  " style="font-size: 0.9rem;">
                                <strong>Location:</strong> <%= tournament.location %>
                            </p>
                            <!-- Button to open modal with tournament details -->
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#tournamentModal" 
                            onclick="showTournamentDetails(
                                '<%= tournament.image_url %>', 
                                '<%= tournament.name %>', 
                                '<%= tournament.description %>', 
                                '<%= new Date(tournament.date).toLocaleDateString('en-GB', { day: 'numeric', month: 'long', year: 'numeric' }) %>', 
                                '<%= tournament.location %>', 
                                '<%= tournament.organizer %>'
                            )">View Details</button>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Modal Template -->
<div class="modal fade" id="tournamentModal" tabindex="-1" aria-labelledby="tournamentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-dark" id="tournamentModalLabel">Tournament Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Tournament Image -->
                <img id="modal-tournament-image" class="img-fluid mb-3" alt="Tournament Image">
                <h4 id="modal-tournament-name"></h4>
                <p id="modal-tournament-description"></p>
                <p><strong>Date:</strong> <span id="modal-tournament-date"></span></p>
                <p><strong>Location:</strong> <span id="modal-tournament-location"></span></p>
                <p><strong>Organizer:</strong> <span id="modal-tournament-organizer"></span></p>
                <!-- Additional Tournament Information -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="window.location.href='https://wa.me/+62816830861'">Daftar</button>
            </div>
        </div>
    </div>
</div>


