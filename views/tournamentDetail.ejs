<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detail Tournament</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/home">Home</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/login">admin</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Tournament Detail Section -->
    <div class="container mt-5 pt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <img src="https://via.placeholder.com/500x300" class="card-img-top" alt="<%= tournament.name %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= tournament.name %></h5>
                        <p class="card-text"><%= tournament.description %></p>
                        <p class="card-text"><strong>Date:</strong> <%= tournament.date %></p>
                        <p class="card-text"><strong>Location:</strong> <%= tournament.location %></p>

                        <!-- Embed Google Map with Location from the URL -->
                        <iframe 
                            src="https://www.google.com/maps/embed?pb=<?= encodeURIComponent(tournament.location) ?>"
                            width="100%" height="300" frameborder="0" style="border:0;" allowfullscreen>
                        </iframe>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
